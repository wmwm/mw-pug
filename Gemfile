source 'https://rubygems.org'

ruby '3.2.2'

# Discord bot framework
gem 'discordrb', '~> 3.5'

# XML parsing (required for Ruby 3.0+)
gem 'rexml', '~> 3.4'

# Database ORM
gem 'sequel', '~> 5.0'

# SQLite database (for development/fallback)
gem 'sqlite3', '~> 1.6'

# OpenAI API client
gem 'ruby-openai', '~> 5.0'

# AWS SDK
gem 'aws-sdk-ec2', '~> 1.0'
gem 'aws-sdk-s3', '~> 1.0'
gem 'aws-sdk-cloudwatch', '~> 1.0'

# Dashboard and visualization
gem 'sinatra', '~> 3.1'
gem 'sinatra-contrib', '~> 3.1'  # For development features like auto-reload
gem 'chartkick', '~> 5.0'        # Chart generation
gem 'json', '~> 2.6'             # JSON handling

# Docker API
gem 'docker-api'

# HTML parsing / scraping
gem 'nokogiri', '~> 1.16'

# Configuration and environment
gem 'dotenv', '~> 2.8'

# Development and testing
group :development, :test do
  gem 'rspec', '~> 3.12'
  gem 'pry', '~> 0.14'
end

gem "ruby-lsp", "~> 0.26.1", group: :development
